{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription pour les propri√®taires</h1>
{# On declare le debut du formulaire #}
    {{ form_start(form) }}
{# L'avantage ici de Form_row, on peut rajouter 
des parametres de tableau associatif #}

{# label me sert a ecrire en dehors de la ligne #}

{# attr alias attributs options et je lui indique 
placeholder pour afficher a l'interieur de la ligne #}
{{ form_row(form.username, 
    {
    'label': 'Nom d\'utilisateur', 
    'attr': {'placeholder': 'Nom d\'utilisateur'
    }}
)}}

{{ form_row(form.email, 
    {
    'label': 'Adresse email', 
    'attr': {'placeholder': 'Adresse email'
    }}
)}}

{{ form_row(form.password,
    {
    'label': 'Mot de passe', 
    'attr': {'placeholder': 'Mot de passe'
    }}
)}}

{{ form_row(form.confirm_password,
    {
    'label': 'Confirmation du mot de passe', 
'attr': {'placeholder': 'Confirmation du mot de passe'

    }}
)}}

<button type="submit" class="btn btn-dark">Inscription</button>

    {{ form_end(form) }}
{% endblock %}