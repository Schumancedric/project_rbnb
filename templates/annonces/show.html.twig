{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
    <h1>Annonces</h1>

<div class="container d-flex justify-content-around">
{# Photos #}
    {% for image in annonce.images %}
        <img src="{{ asset('/uploads/' ~ image.name) }}" alt="Image" width="250">
    {% endfor %}
</div>

{# Description annonces #}
    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ annonce.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ annonce.description }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ annonce.adresse }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ annonce.tel }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ annonce.url }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ annonce.prix }}</td>
            </tr>
        </tbody>
    </table>
<div class="container">
    <div class="d-flex justify-content-between">
        <a href="{{ path('annonces_edit', {'id': annonce.id}) }}" class="btn btn-warning">Modifier</a>
         {{ include('annonces/_delete_form.html.twig') }}
        <a href="{{ path('annonces_index') }}" class="btn btn-info">Revenir en arri√®re</a>
    </div>
</div>

{% endblock %}
