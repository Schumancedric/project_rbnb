{% extends 'base.html.twig' %}

{% block title %} Annonces {% endblock %}

{% block body %}
    <h1>Vos annonces</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Adresse</th>
                <th>Tel</th>
                <th>Url</th>
                <th>Prix</th>
                <th>Image1</th>
                <th>Image2</th>
                <th>Image3</th>
                <th>Image4</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.title }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.adresse }}</td>
                <td>{{ annonce.tel }}</td>
                <td>{{ annonce.url }}</td>
                <td>{{ annonce.prix }}</td>
                <td>{{ annonce.image1 }}</td>
                <td>{{ annonce.image2 }}</td>
                <td>{{ annonce.image3 }}</td>
                <td>{{ annonce.image4 }}</td>
                <td>
                    <a href="{{ path('annonces_show', {'id': annonce.id}) }}" class="btn btn-secondary">Afficher</a>
                    <a href="{{ path('annonces_edit', {'id': annonce.id}) }}" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucune annonce enregistrer</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('annonces_new') }}" class="btn btn-secondary">Create new</a>
{% endblock %}
